    </changeSet>
    <changeSet id="20160713032007-3" author="jhipster">    
        <addForeignKeyConstraint baseColumnNames="instituicao_id"
                                 baseTableName="tb_investimento"
                                 constraintName="fk_investimento_instituicao_id"
